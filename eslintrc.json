{
    "env": {
      "browser": true,
      "node": true,
      "mocha": true,
      "amd": true
    },
    "ecmaFeatures": {
        "modules": true,
        "blockBindings": true
    },
    "rules": {
        "block-scoped-var": [2],
        "comma-style": [2, "last"],
        "curly": [2, "all"],
        "eqeqeq": [2],
        "indent": [2, 4, {"SwitchCase": 1}],
        "new-cap": [2, {"capIsNew": false}],
        "no-caller": [2],
        "no-cond-assign": [2, "except-parens"],
        "no-debugger": [2],
        "no-eval": [2],
        "no-iterator": [2],
        "no-multi-str": [2],
        "no-proto": [2],
        "no-redeclare": [2],
        "no-script-url": [2],
        "no-undef": [2],
        "no-unused-vars": [2],
        "quotes": [2, "single", "avoid-escape"],
        "semi": [2, "always"],
        "space-before-function-paren": [2, {"anonymous": "always", "named": "never"} ],
        "space-after-keywords": [2],
        "wrap-iife": [2, "inside"]
    },
    "globals": {
        "one": true,
        "Ext": true,
        "LOCALEID": true,
        "SUPPORTEDLOCALEIDS": true,
        "DEFAULTLOCALEID": true,
        "LOCALECOOKIENAME": true,

        "INCLUDE": false,
        "GETSTATICURL": false,
        "GETTEXT": false,
        "TR": false,
        "TRPAT": false,
        "TRHTML": false,

        "defineTest": false
    }
}
